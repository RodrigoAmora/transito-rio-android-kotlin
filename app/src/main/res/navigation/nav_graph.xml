<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/OnibusFragment">

    <fragment
        android:id="@+id/OnibusFragment"
        android:name="br.com.rodrigoamora.transitorio.ui.fragment.OnibusFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_onibus">
        <action
            android:id="@+id/action_OnibusFragment_to_SobreFragment"
            app:destination="@id/SobreFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/SobreFragment"
        android:name="br.com.rodrigoamora.transitorio.ui.fragment.SobreFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_sobre">
    </fragment>

</navigation>